#:kivy 1.11.0
<CustButton@Button>:
    font_size: 32
    background_normal: ''
    background_color: (2/255, 10/255, 24/255, 1)

<CalcGridLayout>:
    id: calculator
    input: entry

    cols: 1
    rows: 7

    size: root.width, root.height

    BoxLayout:
        TextInput:
            id: entry
            font_size: 40
            multiline: False
            halign: "center"

            background_color: (20/255, 20/255, 30/255, 1)
            foreground_color: (235/255, 118/255, 119/255, 1)

    BoxLayout:
        spacing: 0
        GridLayout:
            rows: 2
            spacing: 0
            CustButton:
                text: 'DEL'
                color: (235/255, 118/255, 119/255, 1)
                on_press: calculator.clear(entry.text[1:])
            CustButton:
                text: "AC"
                color: (232/256, 113/256, 9/256)
                on_press: entry.text = ""
        
        CustButton:
            text: "("
            color: (9/256, 180/256, 232/256)
            on_press: root.button_press('(')
        CustButton:
            text: ")"
            color: (9/256, 180/256, 232/256)
            on_press: root.button_press(')')
        CustButton:
            text: "!"
            on_press: root.button_press('!')
        CustButton:
            text: "="
            background_color: (87/256,236/256,176/256)
            color: (20/255, 20/255, 30/255, 1)
            on_press: calculator.calculate(entry.text)

    BoxLayout:
        spacing: 0
        CustButton:
            text: "NEG"
            color: (191/256, 243/256, 100/256)
            on_press: root.button_press('-')
        CustButton:
            text: "7"
            on_press: root.button_press(self.text)
        CustButton:
            text: "8"
            on_press: root.button_press(self.text)
        CustButton:
            text: "9"
            on_press: root.button_press(self.text)
        CustButton:
            text: "+"
            color: (235/255, 118/255, 119/255, 1)
            on_press: root.button_press(' + ')
  
    BoxLayout:
        spacing: 0
        CustButton:
            text: "^"
            color: (191/256, 243/256, 100/256)
            on_press: root.button_press('^ ')
        CustButton:
            text: "4"
            on_press: root.button_press(self.text)
        CustButton:
            text: "5"
            on_press: root.button_press(self.text)
        CustButton:
            text: "6"
            on_press: root.button_press(self.text)
        CustButton:
            text: "-"
            color: (235/255, 118/255, 119/255, 1)
            on_press: root.button_press(' - ')
  
    BoxLayout:
        spacing: 0
        CustButton:
            text: "√x"
            color: (191/256, 243/256, 100/256)
            on_press: root.button_press('√')
        CustButton:
            text: "1"
            on_press: root.button_press(self.text)
        CustButton:
            text: "2"
            on_press: root.button_press(self.text)
        CustButton:
            text: "3"
            on_press: root.button_press(self.text)
        CustButton:
            text: "*"
            color: (235/255, 118/255, 119/255, 1)
            on_press: root.button_press(' * ')

    BoxLayout:
        spacing: 0
        CustButton:
            text: "1/x"
            color: (191/256, 243/256, 100/256)
            on_press: root.button_press('^ -1')
        CustButton:
            text: "0"
            on_press: root.button_press('0')
        CustButton:
            text: "000"
            on_press: root.button_press('000')
        CustButton:
            text: "."
            on_press: root.button_press(".")
        CustButton:
            text: "/"
            color: (235/255, 118/255, 119/255, 1)
            on_press: root.button_press(' / ')